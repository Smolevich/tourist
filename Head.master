                        </tr>
                        <tr>
                            <td>
                                <asp:Button ID="Button17" runat="server" Font-Size="Medium" 
                                    Text="Турфирмы" Width="175px" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <asp:Button ID="Button18" runat="server" Font-Size="Medium" 
                                    Text="Памятка туриста" Width="175px" />
                            </td>
                        </tr>
                    </table>
                    </td>
                <td class="style3" valign="top">
                    <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
                    </asp:ContentPlaceHolder>
                    </td>
                <td class="style3" align="center">
                    <br />
                    <br />
                    <asp:GridView ID="GridView1" runat="server" Width="225px" 
                        AutoGenerateColumns="False" DataSourceID="SqlDataSource1">
                        <Columns>
                            <asp:BoundField DataField="Дата" HeaderText="Дата" ReadOnly="True" 
                                SortExpression="Дата" />
                            <asp:BoundField DataField="Новость" HeaderText="Новость" 
                                SortExpression="Новость" />
                        </Columns>
                    </asp:GridView>
                    <asp:SqlDataSource ID="SqlDataSource1" runat="server" 
                        ConnectionString="<%$ ConnectionStrings:DatabaseConnectionString %>" 
                        ProviderName="<%$ ConnectionStrings:DatabaseConnectionString.ProviderName %>" 
                        SelectCommand="SELECT [Дата], [Новость] FROM [News]"></asp:SqlDataSource>
                    </td>
            </tr>
            <tr>
                <td class="style8" valign="top" style="background-color: #FFFFFF">
                    </td>
                <td class="style8" valign="top">
                    </td>
                <td class="style8" align="center">
                    </td>
            </tr>
        </table>
