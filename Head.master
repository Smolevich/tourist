                <td class="style2" width="10%">
                    <table class="style1">
                        <tr>
                            <td colspan="2">
                                <asp:Label ID="Label1" runat="server" Text="Label"></asp:Label>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <asp:Label ID="lblLogin" runat="server" Text="Логин" Font-Size="Large"></asp:Label>
                            </td>
                            <td>
                                <asp:TextBox ID="txtLogin" runat="server" Width="120px"></asp:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <asp:Label ID="lblPass" runat="server" Text="Пароль" Font-Size="Large"></asp:Label>
                            </td>
                            <td>
                                <asp:TextBox ID="txtPass" runat="server" Width="120px"></asp:TextBox>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <asp:Button ID="btnRegister" runat="server" Text="Регистрация" Font-Size="Medium" 
                                    Width="100px" />
                            </td>
                            <td>
                                <asp:Button ID="btnLogin" runat="server" Text="Вход" Font-Size="Medium" 
                                    Width="50px"  OnClick="btnLogin_Click" />
                                <asp:Button ID="btnLogout" runat="server" Text="Выход" Font-Size="Medium" 
                                    Width="70px" />
                            </td>
                        </tr>
                    </table>
                    </td>
            </tr>
            <tr>
                <td class="style5" colspan="3" align="center" style="background-color: #FFFFC1"><h2 align="center" 
                        
                        style="font-family: 'Courier New', Courier, monospace; font-style: oblique" 
                        title="символика центра">
                    &nbsp; 
                    Добро пожаловать на сайт Тихвинского информационно-туристского центра&nbsp;</h2></td>
            </tr>
            <tr>
                <td class="style7" align="center" colspan="3">
                    <table class="style1">
                        <tr>
                            <td width="20%">
                                &nbsp;</td>
                            <td align="center">
                                <asp:Button ID="Button9" runat="server" Text="Главная" Font-Size="Medium" />
                            </td>
                            <td align="center">
                                <asp:Button ID="Button10" runat="server" Text="Новости" Font-Size="Medium" />
                            </td>
                            <td align="center">
                                <asp:Button ID="Button11" runat="server" Text="О нас" Font-Size="Medium" />
                            </td>
                            <td align="center">
                                <asp:Button ID="Button12" runat="server" Text="Как добраться" 
                                    Font-Size="Medium" />
                            </td>
                            <td align="center">
                                <asp:Button ID="Button13" runat="server" Text="Контакты" Font-Size="Medium" />
                            </td>
                            <td width="20%">
                                &nbsp;</td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td class="style3" valign="top" style="background-color: #FFFFFF">
                    <table class="style1">
                        <tr>
                            <td>
                                <asp:Button ID="Button4" runat="server" Text="Достопримечательности" Width="175px" 
