<%@ Master Language="C#" AutoEventWireup="false" CodeFile="Head.master.cs" Inherits="Head" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
    <asp:ContentPlaceHolder id="head" runat="server">
    </asp:ContentPlaceHolder>
    <style type="text/css">
        .style1 {
            width: 100%;
        }
        .style2
        {
            height: 160px;
        }
        .style3
        {
            height: 354px;
        }
        .style5
        {
            height: 35px;
        }
        .style7
        {
            height: 35px;
            }
        .style8
        {
            height: 77px;
        }
        </style>
</head>
<body>
    <form id="form1" runat="server">
    <div>
        <table class="style1" border="1">
            <tr>
                <td class="style2" width="20%" align="center">
                    <asp:Image ID="Image1" runat="server" Width="170px" Height="151px" 
                        ImageUrl="~/Img/Инфо.jpg" />
                    </td>
                <td class="style2" width="70%" align="center">
                    <asp:Image ID="Image2" runat="server" Height="115px" Width="540px" />
