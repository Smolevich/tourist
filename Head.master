                        </tr>
                        <tr>
                            <td>
                                <asp:Button ID="Button8" runat="server" Text="Транспорт" Width="175px" 
                                    Font-Size="Medium" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <asp:Button ID="Button14" runat="server" Font-Size="Medium" Text="Маршруты" 
                                    Width="175px" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <asp:Button ID="Button15" runat="server" Font-Size="Medium" Text="События" 
                                    Width="175px" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <asp:Button ID="Button16" runat="server" Font-Size="Medium" Text="Аудиогиды" 
                                    Width="175px" />
